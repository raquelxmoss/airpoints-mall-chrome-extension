{
    "manifest_version": 3,
    "name": "Airpoints Mall",
    "version": "1.0",
    "description": "Shows you if the website you're visiting is part of the Air NZ Airpoints Mall.",
    "permissions": ["activeTab", "storage", "alarms", "notifications"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
